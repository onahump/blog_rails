<h1>Listing all articles</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th colspan="2"></th>
	</tr>

	<% @articles.each do |article|%>
		<tr>
			<th><%= article.title%></th>
			<th><%= article.text%></th>
			<th> <%= link_to 'Show', article_path(article) %> </th>
			<th> <%= link_to 'Edit', edit_article_path(article) %> </th>
		</tr>
	<% end %>

</table>

<%= link_to 'New article', new_article_path %>